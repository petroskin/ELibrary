@model IEnumerable<ELibrary.Domain.Models.Rent> 
@{
    ViewData["Title"] = "All Rents";
}

<h1>Rented - All Months</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Month
            </th>
            <th>
                Book Name
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.GetDateFormat()
                </td>
                <td>
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@item.BookId" >@item.Book.Name</a>
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Index" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>