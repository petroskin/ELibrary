@model ELibrary.Domain.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h4>@ViewData["BooksLeft"]</h4>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categories)
        </dt>
        <dd class="col-sm-10">
            @Model.Categories.Select(i => i.Category.Name).Aggregate((i, j) => i + ", " + j)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageLink)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageLink" style="max-width: 300px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Authors)
        </dt>
        <dd class="col-sm-10">
            @foreach (BookAuthor ba in Model.Authors)
            {
                <a asp-controller="Authors" asp-action="Details" asp-route-id="@ba.AuthorId">@ba.Author.FullName()</a><br />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Publishers" asp-action="Details" asp-route-id="@Model.PublisherId">@Model.Publisher.Name</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvgRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvgRating) / 5
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalRents)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalRents)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> <span>|</span>
    }
    @if ((bool)ViewData["Reviewable"] || User.IsInRole("Admin"))
    {
        <a asp-controller="Reviews" asp-action="Create" asp-route-bookid="@Model.Id" class="btn btn-light">Add Review</a> <span>|</span>
    }
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="AddToCart" asp-route-id="@Model.Id">
            <input type="submit" value="Add To Cart" class="btn btn-primary" /> <span>|</span>
        </form>
    }
    <a asp-action="Index">Back to List</a>
</div>
<div>
    @foreach (Review review in Model.Reviews)
    {
        <hr />
        <div class="py-4">
            <h5>@($"{review.User.Name} {review.User.Surname}")</h5>
            <p style="color: dimgrey">Rating: @review.Rating / 5</p>
            <p>@review.Comment</p>
            @if (review.UserId == (int)ViewData["UserId"])
            {
                <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.Id" method="get" class="btn btn-warning">Edit</a>
            }
            @if (review.UserId == (int)ViewData["UserId"] || User.IsInRole("Admin"))
            {
                <a asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.Id" method="get" class="btn btn-danger">Delete</a>
            }
        </div>
    }
</div>
