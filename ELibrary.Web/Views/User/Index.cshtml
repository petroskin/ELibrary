@model IEnumerable<ELibrary.Domain.Identity.ELibraryUser>
@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>


<div class="container">
    <div class="row">
        <form asp-controller="User" asp-action="Import" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="file" name="file" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Import Users</button>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (ELibrary.Domain.Identity.ELibraryUser item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>
                        @if ((string)ViewData["user"] != item.Id)
                        {
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Manage roles</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

